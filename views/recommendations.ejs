<html lang="en">
    <meta name="viewport" charset="utf-8" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/project_main.css" type="text/css"/>
    
<head>
    <div style="background-color:black">
      <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <div class="logo">TravelGPT</div>
          </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Sign up</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
</head>



<body>
  
      <div class="recommendationBodyBox">
        <ul class="boxBar">
            <li class="barItems">Destination</li>
            <li class="barItems" style="float:right;margin:5px">
              <a class="go-hotel-button" href="/saved-attractions">Saved List</a>
            </li>
            <li class="barItems" style="float:right">
                <div class="barDays">No. of Days:</div>
            </li>
            <li class="barItems" style="float:right">
                <button class="barButton">Search</button>
            </li>
            
            
        </ul>
        <hr></hr>
        <div class="container">
            <div class="row row-cols-3">
                <!-- DONT NEED THESE 6 ITEMS, JUST NEED 1. ADD THE API SO THAT EACH ITEM IS TAGGED AS 1 col CLASS -->
                <% recommendations.forEach((recommendation) => { %>
                <div class="col" style="border:1px solid black">
                    <p class="fs-6">
                        <div class="clearfix">
                            <img class="img1" src= '<%=recommendation.image%>'  alt="insert img api link">
                        </div>
                        <!-- ADD API DETAILS HERE -->
                        <%= recommendation.name %>
                        Rating: <%= recommendation.rating %> / 5
                        Price: <%= recommendation.price %>
                        <!-- save button-->
                        <form action="/save-attraction" method="POST">
                          <input type="hidden" name="attractionName" value="<%= recommendation.name %>">
                          <input type="hidden" name="attractionRating" value="<%= recommendation.rating %>">
                          <input type="hidden" name="attractionPrice" value ="<%= recommendation.price%>">
                          <input type="hidden" name="attractionImageURL" value ="<%= recommendation.image%>">
                          <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                        
                    </p>
                </div>
                <% }); %>
        </div>
    </div>
</body>

</html>

