<!DOCTYPE html>
<html lang="en">
<!-- import css and include bootstrap cdn -->
    <meta name="viewport" charset="utf-8" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/project_main.css" type="text/css"/>
<head>
    <div style="background-color:black">
<!-- add navigation bar -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-body" data-bs-theme="dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">
              <div class="logo">TravelGPT</div>
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/signup">Sign up</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    
</head>
<body div class="hotel-result-body">
  
<!-- search input layout -->
    <div class="search-bar">
        <input id="origin" type="text" placeholder="Country of Origin">
        <input id="destination" type="text" placeholder="Destination">
        <input id="startDate" type="date" placeholder="Start Date">
        <input id="endDate" type="date" placeholder="End Date">
        <input id="pax" type="number" placeholder="Pax">
        <button class="go-button" id="goButton">GO!</button>
        <a class="go-hotel-button" href="/saved-hotel">Saved List</a>
    </div>
    <div class="center" style="width:80%;margin:auto">
      <div class="flight-prices" id="flightPrices">
          <!-- Flight prices will be populated here using JavaScript -->
          <% hotels.forEach((hotel) => { %>
          <div class="hotel-card">
            <div class="hotelResultRow" style="background-color:white">
                <h2><%= hotel.name %></h2>
                <p>Rating: <%= hotel.rating %> / 5</p>
                <p>Price: <%= hotel.price %></p>
                <form action="/save-hotel" method="POST">
                  <input type="hidden" name="hotelName" value="<%= hotel.name %>">
                  <input type="hidden" name="hotelRating" value="<%= hotel.rating %>">
                  <input type="hidden" name="hotelPrice" value ="<%= hotel.price%>">
                  <button type="submit" class="btn btn-primary">Save</button>
                </form> 
            </div>
          </div>
        <% }); %>
      </div>
    </div>
<!-- background image credit -->
    <div class="hotel-result-text"> Alex Cheung/Unsplash</div>
    <form method ="get" action="/recommendations/search">
<!-- go to recommendations button -->
      <button class="go-button" id="goButton"> Recommendations</button>
    </form>

</body>
</html>
