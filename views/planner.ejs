<!DOCTYPE html>
<html lang="en">
    <meta name="viewport" charset="utf-8" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/project_main.css" type="text/css"/>
    
<head>
    <div style="background-color:black">
      <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand">
            <div class="logo">TravelGPT</div>
          </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Sign up</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <script>
        function updateMaxDays() {
            const newMaxDays = parseInt(document.getElementById('maxDaysInput').value);
            if (!isNaN(newMaxDays) && newMaxDays > 0) {
                window.location.href = `/planner?maxDays=${newMaxDays}`;
            }
        }
    </script>
</head>

<br>
<br>
<br>

<body>
    <div class="container">
        <label for="maxDaysInput">Set Maximum Days: </label>
        <input type="number" id="maxDaysInput" min="1" value="<%= maxDays %>">
        <button onclick="updateMaxDays()">Update</button>
    </div>
    <div class="recommendationBodyBox">
        <% for (const [day, attractions] of Object.entries(attractionsByDay)) { %>
            <div class="day-card">
                <h2>Day <%= day %></h2>
                <ul>
                    <% for (const attraction of attractions) { %>
                    <li>
                        <img src="<%= attraction.imageURL %>" alt="Attraction Image">
                        <p><%= attraction.attraction_name %></p>
                        <p>Rating: <%= attraction.rating %></p>
                        <p>Price: $<%= attraction.price %></p>
                    </li>
                    <% } %>
                </ul>
            </div>
        <% } %>
    </div>
</body>

</html>
